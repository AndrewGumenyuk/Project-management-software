<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="VerticalSeparator" TargetType="{x:Type Separator}" BasedOn="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}">
        <Setter Property="Width" Value="2"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="0,5,5,5"/>
        <Setter Property="Background" Value="#012A54"/>
    </Style>

    <Style x:Key="GridSplitter" TargetType="{x:Type GridSplitter}">
        <Setter Property="Background" Value="GhostWhite"/>
    </Style>

    <Style x:Key="HorizontalGridSplitter" BasedOn="{StaticResource GridSplitter}" TargetType="{x:Type GridSplitter}">
        <Setter Property="Margin" Value="10,0,5,0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Height" Value="5"/>
    </Style>

    <Style x:Key="VerticalGridSplitter" BasedOn="{StaticResource GridSplitter}" TargetType="{x:Type GridSplitter}">
        <Setter Property="Margin" Value="0,5,0,5"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Width" Value="5"/>
    </Style>
</ResourceDictionary>